{
  "properties": [
    {
      "name": "logbull.enabled",
      "type": "java.lang.Boolean",
      "description": "Enable LogBull integration.",
      "defaultValue": true
    },
    {
      "name": "logbull.project-id",
      "type": "java.lang.String",
      "description": "LogBull project ID (UUID format)."
    },
    {
      "name": "logbull.host",
      "type": "java.lang.String",
      "description": "LogBull server host URL (e.g., http://localhost:4005)."
    },
    {
      "name": "logbull.api-key",
      "type": "java.lang.String",
      "description": "API key for authentication (optional)."
    },
    {
      "name": "logbull.log-level",
      "type": "com.logbull.core.LogLevel",
      "description": "Minimum log level to process.",
      "defaultValue": "INFO"
    },
    {
      "name": "logbull.use-standalone-logger",
      "type": "java.lang.Boolean",
      "description": "Use standalone LogBullLogger instead of Logback appender.",
      "defaultValue": false
    }
  ]
}
